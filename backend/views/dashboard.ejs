<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <title>Dashboard - Edit Resume</title>
  <style>
    :root {
      --primary: #4361ee;
      --primary-light: #4895ef;
      --secondary: #3f37c9;
      --success: #4cc9f0;
      --danger: #f72585;
      --light: #f8f9fa;
      --dark: #212529;
      --gray: #adb5bd;
      --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      --input-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      --transition: all 0.3s ease;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      padding: 40px 0;
      color: var(--dark);
      line-height: 1.6;
    }
    
    .container {
      width: 80%;
      max-width: 1000px;
      margin: auto;
      padding: 0;
      position: relative;
    }
    
    .dashboard-header {
      text-align: center;
      margin-bottom: 30px;
      position: relative;
    }
    
    .dashboard-header h2 {
      font-size: 2.5rem;
      color: var(--primary);
      margin-bottom: 10px;
      font-weight: 700;
      position: relative;
      display: inline-block;
    }
    
    .dashboard-header h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 4px;
      background: var(--primary-light);
      border-radius: 2px;
    }
    
    .greeting {
      font-size: 1.2rem;
      color: var(--dark);
      margin-top: 20px;
      font-weight: 500;
      background: rgba(255, 255, 255, 0.8);
      padding: 10px 15px;
      border-radius: 50px;
      box-shadow: var(--card-shadow);
      display: inline-block;
    }
    
    .card {
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
      margin-bottom: 30px;
      transition: var(--transition);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }
    
    .card-header {
      background: var(--primary);
      color: white;
      padding: 20px 30px;
      position: relative;
    }
    
    .card-content {
      padding: 30px;
    }
    
    .alert {
      padding: 15px 20px;
      margin-bottom: 25px;
      border-radius: 10px;
      position: relative;
      animation: fadeIn 0.5s ease-in-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .alert-success {
      background-color: rgba(76, 201, 240, 0.2);
      color: #0077b6;
      border-left: 4px solid var(--success);
    }
    
    .alert-error {
      background-color: rgba(247, 37, 133, 0.2);
      color: #9d0208;
      border-left: 4px solid var(--danger);
    }
    
    .form-group {
      margin-bottom: 25px;
      position: relative;
    }
    
    label {
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 8px;
      display: block;
      font-size: 0.95rem;
    }
    
    input, textarea {
      width: 100%;
      padding: 12px 15px;
      border: 2px solid var(--gray);
      border-radius: 8px;
      font-size: 1rem;
      transition: var(--transition);
      box-shadow: var(--input-shadow);
    }
    
    input:focus, textarea:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
    }
    
    .section-title {
      margin: 35px 0 20px;
      position: relative;
      font-size: 1.3rem;
      color: var(--secondary);
      padding-bottom: 10px;
      font-weight: 700;
      display: flex;
      align-items: center;
    }
    
    .section-title:before {
      content: '';
      margin-right: 10px;
      width: 30px;
      height: 3px;
      background: var(--primary);
      border-radius: 2px;
    }
    
    .work-experience-item, .education-item {
      background: rgba(248, 249, 250, 0.8);
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 15px;
      border-left: 4px solid var(--primary-light);
      transition: var(--transition);
    }
    
    .work-experience-item:hover, .education-item:hover {
      background: white;
      box-shadow: var(--card-shadow);
      transform: translateX(5px);
    }
    
    .btn {
      padding: 12px 25px;
      border: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: var(--transition);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: white;
      box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
      box-shadow: 0 7px 20px rgba(67, 97, 238, 0.4);
      transform: translateY(-2px);
    }
    
    .form-buttons {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }
    
    .icon-input {
      position: relative;
    }
    
    .icon-input input {
      padding-left: 40px;
    }
    
    .icon-input i {
      position: absolute;
      left: 15px;
      top: 40px;
      color: var(--gray);
    }
    
    .skills-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 10px;
    }
    
    .skill-tag {
      background: rgba(76, 201, 240, 0.1);
      color: var(--primary);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
      transition: var(--transition);
      border: 1px solid rgba(76, 201, 240, 0.3);
    }
    
    .skill-tag:hover {
      background: rgba(76, 201, 240, 0.2);
      transform: scale(1.05);
    }
    
    @media (max-width: 768px) {
      .container {
        width: 95%;
      }
      
      .card-content {
        padding: 20px;
      }
      
      .dashboard-header h2 {
        font-size: 2rem;
      }
    }
    
    /* Animation for form elements */
    @keyframes slideIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .form-group {
      animation: slideIn 0.4s ease-out forwards;
      opacity: 0;
    }
    
    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.2s; }
    .form-group:nth-child(3) { animation-delay: 0.3s; }
    .form-group:nth-child(4) { animation-delay: 0.4s; }
    .form-group:nth-child(5) { animation-delay: 0.5s; }
  </style>
</head>
<body>
  <div class="container">
    <div class="dashboard-header">
      <h2>Resume Builder</h2>
      <!-- Use userName instead of parsedResume.name -->
      <p class="greeting">Hello <%= userName %>!</p>
    </div>

    <div class="card">
      <div class="card-header">
        <h3>Edit Your Professional Profile</h3>
      </div>
      <div class="card-content">
        <!-- Success or Error Message -->
        <% if (message) { %>
          <div class="alert <%= isSuccess ? 'alert-success' : 'alert-error' %>">
            <%= message %>
          </div>
        <% } %>

        <form id="resumeForm" action="/update-resume/<%= userId %>" method="POST">
          
          <!-- Basic Fields -->
          <div class="form-group icon-input">
            <label><i class="fas fa-user"></i> Full Name</label>
            <input type="text" id="name" name="name" value="<%= parsedResume.name || userName %>" placeholder="Your full name" />
          </div>

          <div class="form-group icon-input">
            <label><i class="fas fa-envelope"></i> Email Address</label>
            <input type="email" id="email" name="email" value="<%= parsedResume.email %>" placeholder="Your email address" />
          </div>

          <div class="form-group icon-input">
            <label><i class="fas fa-phone"></i> Phone Number</label>
            <input type="text" id="phone" name="phone" value="<%= parsedResume.phone %>" placeholder="Your phone number" />
          </div>

          <div class="form-group icon-input">
            <label><i class="fab fa-linkedin"></i> LinkedIn Profile</label>
            <input type="text" id="linkedIn" name="linkedIn" value="<%= parsedResume.linkedIn %>" placeholder="Your LinkedIn URL" />
          </div>

          <div class="form-group icon-input">
            <label><i class="fab fa-github"></i> GitHub Profile</label>
            <input type="text" id="github" name="github" value="<%= parsedResume.github %>" placeholder="Your GitHub URL" />
          </div>

          <!-- Skills -->
          <div class="section-title">Professional Skills</div>
          <div class="form-group">
            <label>List your skills (comma separated)</label>
            <textarea id="skills" name="skills" rows="3" placeholder="e.g. JavaScript, React, Node.js"><%= parsedResume.skills.join(", ") %></textarea>
            
            <div class="skills-tags">
              <% parsedResume.skills.slice(0, 5).forEach(skill => { %>
                <span class="skill-tag"><%= skill %></span>
              <% }) %>
              <% if (parsedResume.skills.length > 5) { %>
                <span class="skill-tag">+<%= parsedResume.skills.length - 5 %> more</span>
              <% } %>
            </div>
          </div>

          <!-- Work Experience -->
          <div class="section-title">Work Experience</div>
          <% parsedResume.workExperience.forEach((work, index) => { %>
            <div class="work-experience-item">
              <div class="form-group">
                <label>Company Name</label>
                <input type="text" name="workExperience[<%= index %>][company]" value="<%= work.company %>" placeholder="Company name" />
              </div>
              <div class="form-group">
                <label>Job Title</label>
                <input type="text" name="workExperience[<%= index %>][role]" value="<%= work.role %>" placeholder="Your role" />
              </div>
              <div class="form-group">
                <label>Duration</label>
                <input type="text" name="workExperience[<%= index %>][duration]" value="<%= work.duration %>" placeholder="e.g. Jan 2020 - Present" />
              </div>
            </div>
          <% }) %>

          <!-- Education -->
          <div class="section-title">Education Background</div>
          <% parsedResume.education.forEach((edu, index) => { %>
            <div class="education-item">
              <div class="form-group">
                <label>Degree/Certification</label>
                <input type="text" name="education[<%= index %>][degree]" value="<%= edu.degree %>" placeholder="Your degree" />
              </div>
              <div class="form-group">
                <label>Institution</label>
                <input type="text" name="education[<%= index %>][university]" value="<%= edu.university %>" placeholder="University/College name" />
              </div>
              <div class="form-group">
                <label>Graduation Year</label>
                <input type="text" name="education[<%= index %>][graduationYear]" value="<%= edu.graduationYear %>" placeholder="Year of graduation" />
              </div>
            </div>
          <% }) %>

          <div class="form-buttons">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i> Save Resume
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>